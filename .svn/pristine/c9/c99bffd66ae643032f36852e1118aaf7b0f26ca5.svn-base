<h4>Iniciar sesión</h4>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.input :email, :autofocus => true %>
  <%= f.input :password %>
  <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  <%= f.button :submit, "Iniciar", :class => 'btn-primary' %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "¿olvido su contraseña?", new_password_path(resource_name) %><br />
<% end -%>
<%#= render "devise/shared/links" %>
