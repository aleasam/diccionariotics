#footer-wrapper{
width:100%;
height:45px;
}
#footer {
clear:both;
margin:0 auto;
padding:0;
letter-spacing:.1em;
text-align: left;
position:fixed;
left:0;
bottom:0;
height:45px;
width:100%;
background:#FFF;
border-top:1px solid #FFF;
-moz-box-shadow: 1px 2px 11px #000;     
-webkit-box-shadow: 1px 2px 11px #000; 
}
#footer a{
color:#221e1e;
text-shadow: 1px 0px 1px #141400; 
} 
#footer a:hover{
color:#636363;
text-shadow: 1px 0px 1px #280404;
}
* html #footer {
position:absolute;
top:expression((0-(footer.offsetHeight)+(document.documentElement.clientHeight ? document.documentElement.clientHeight : document.body.clientHeight)+(ignoreMe = document.documentElement.scrollTop ? document.documentElement.scrollTop : document.body.scrollTop))+'px');
}
.redes{
width:200px;
float:left;
margin-top:6px;
padding-left:280px;
height:40px;
}
a.rss, a.twitter, a.facebook {
opacity:0.4;
filter:alpha(opacity=40);
width:35px;
height:34px;
display:inline-block;
margin-left: 2px;
}

a.rss:hover, a.facebook:hover, a.twitter:hover { opacity:1;
filter:alpha(opacity=100);
}
